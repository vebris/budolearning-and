<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    style="@style/item_list"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/club_id"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/club_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/titulo"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_marginStart="6dp" />
            <TextView
                android:id="@+id/club_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/titulo2"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_marginStart="6dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/club_profesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titulo2"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:layout_marginTop="1dip"
        />

    <TextView
        android:id="@+id/club_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titulo2"
        android:textColor="@color/primary_dark"
        android:drawableStart="@android:drawable/ic_menu_directions"
        android:textIsSelectable="true"
        />

    <TextView
        android:id="@+id/club_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titulo2"
        android:textColor="@color/primary_dark"
        android:layout_marginTop="1dip"
        android:drawableStart="@android:drawable/sym_action_email"
        android:textIsSelectable="true"
        />
    <TextView
        android:id="@+id/club_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titulo2"
        android:textColor="@color/primary_dark"
        android:layout_marginTop="1dip"
        android:drawableStart="@android:drawable/sym_action_call"
        android:textIsSelectable="true"
        />

    <TextView
        android:id="@+id/club_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titulo2"
        android:textColor="@color/primary_dark"
        android:layout_marginTop="1dip"
        android:drawableStart="@android:drawable/sym_action_chat"
        android:textIsSelectable="true"
        />


</LinearLayout>