<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/item_list"
    android:weightSum="1"
    android:id="@+id/linearlayout_idFichero"
    >

    <ImageView
        android:id="@+id/fichero_id"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:layout_width="0dp"
        android:layout_weight=".12"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fichero_descripcion"
        android:layout_width="0dp"
        android:layout_weight=".68"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fichero_id"
        android:layout_toRightOf="@+id/fichero_id"
        android:textSize="@dimen/titulo1"
        android:textStyle="bold"
        android:textColor="@color/color_text_darkgrey"
        android:layout_marginTop="1dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content"
        android:gravity="bottom|right">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nuevo"
            android:id="@+id/fichero_nuevo"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/fichero_coste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/tituloDerecha"
            android:textColor="@color/color_text_darkgrey"/>


        <TextView
            android:id="@+id/fichero_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/tituloDerecha"
            android:textColor="@color/color_text_darkgrey"
            />

        <TextView
            android:id="@+id/fichero_tamano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/tituloDerecha"
            android:textColor="@color/color_text_darkgrey"
            android:layout_below="@+id/fichero_fecha" />

    </LinearLayout>
</LinearLayout>