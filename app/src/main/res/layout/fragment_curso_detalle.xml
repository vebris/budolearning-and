<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/background_generic"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_id"
                    android:id="@+id/txtId"
                    android:layout_column="0"/>
                <TextView
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoId"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_nombre"
                    android:id="@+id/txtNombre"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoNombre"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_descripcion"
                    android:id="@+id/txtDescripcion"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoDescripcion"
                    android:layout_column="1" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_direccion"
                    android:id="@+id/txtDireccion"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoDireccion"
                    android:layout_column="1" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_profesor"
                    android:id="@+id/txtProfesor"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoProfesor"
                    android:layout_column="1" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_precio"
                    android:id="@+id/txtPrecio"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoPrecio"
                    android:layout_column="1" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_fecha_inicio"
                    android:id="@+id/txtFechaInicio"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoFechaInicioDia"
                    android:layout_column="1"
                    android:clickable="false"
                    android:enabled="true" />
                <EditText
                    android:layout_weight=".30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoFechaInicioHora"
                    android:layout_column="1"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_fecha_fin"
                    android:id="@+id/txtFechaFin"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoFechaFinDia"
                    android:layout_column="1"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true" />
                <EditText
                    android:layout_weight=".30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cursoFechaFinHora"
                    android:layout_column="1"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true" />

            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>