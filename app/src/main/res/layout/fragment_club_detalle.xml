<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/background_generic"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_id"
                    android:id="@+id/txtId"
                    android:layout_column="0"/>
                <TextView
                    android:layout_weight=".70"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubId"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_nombre"
                    android:id="@+id/txtNombre"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubNombre"
                    android:layout_column="1"
                    android:inputType="text" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_descripcion"
                    android:id="@+id/txtDescripcion"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubDescripcion"
                    android:layout_column="1"
                    android:inputType="text" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_direccion"
                    android:id="@+id/txtDireccion"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubDireccion"
                    android:layout_column="1"
                    android:inputType="text"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_localidad"
                    android:id="@+id/txtLocalidad"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubLocalidad"
                    android:layout_column="1"
                    android:inputType="text"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_email"
                    android:id="@+id/txtEmail"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubEmail"
                    android:layout_column="1"
                    android:inputType="textEmailAddress" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_telefono"
                    android:id="@+id/txtTelefono"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubTelefono"
                    android:layout_column="1"
                    android:inputType="phone"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_web"
                    android:id="@+id/txtWeb"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubWeb"
                    android:layout_column="1"
                    android:inputType="textWebEditText"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/club_profesor"
                    android:id="@+id/txtProfesor"
                    android:layout_column="0"/>
                <EditText
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubProfesor"
                    android:layout_column="1"
                    android:inputType="text"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>