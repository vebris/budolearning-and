<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_list"
    android:weightSum="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight=".12"
        android:layout_height="wrap_content"
        android:gravity="top|start">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/recurso_img"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/recurso_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".85"
        android:layout_height="wrap_content"
        android:gravity="top|end">

        <TextView
            android:id="@+id/recurso_nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/titulo1"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:layout_marginTop="1dip" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/recurso_tipo"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:layout_marginTop="1dip"
                android:textSize="@dimen/titulo2"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/recurso_enPrograma"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:textSize="@dimen/tituloDerecha"
                android:textColor="@color/primary_dark"
                android:gravity="end|center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>