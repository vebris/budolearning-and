<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_generic">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_cc"

        >
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            app:theme="@style/ToolbarTheme"
            app:titleTextAppearance="@style/ToolbarTitle"
            app:subtitleTextAppearance="@style/ToolbarSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right">

            <LinearLayout
                android:baselineAligned="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".63"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tool_title"
                        style="@style/ToolbarTitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tool_subtitle"
                        style="@style/ToolbarSubtitle"
                        android:visibility="invisible"
                         />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tool_puntos"
                        style="@style/ToolbarPoints"
                        android:textSize="@dimen/tituloDerecha"
                        android:textColor="@color/color_text_ligthblack"
                        android:background="@drawable/shape_gold"
                    />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <!-- Contenido Principal -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/adMobBanner"
            />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adMobBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/admob_banner"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

    <!-- MenÃº Lateral Izquierdo-->
    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">

        <!-- Profile Box -->

        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/list_background_header"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/imagen"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imageView"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/header_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/list_item_title"
                    android:textSize="@dimen/titulo1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/header_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/list_item_title"
                    android:textSize="@dimen/titulo3" />
            </LinearLayout>
        </RelativeLayout>

        <!-- List of Actions (pages) -->
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="@color/list_background"/>

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>
