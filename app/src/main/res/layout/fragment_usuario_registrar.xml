<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_generic">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/background_generic"
        >
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:visibility="visible"
                >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_id"
                        android:id="@+id/txtId"
                        android:layout_column="0"/>
                    <TextView
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioId"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_login"
                        android:textColor="@color/color_text_darkgrey"
                        android:id="@+id/txtLogin"
                        android:layout_column="0"
                        />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioLogin"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>
                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_password"
                        android:textColor="@color/color_text_darkgrey"
                        android:id="@+id/txtPassword"
                        android:layout_column="0"
                        />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioPassword"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="textPassword"
                        />
                </TableRow>
                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_nombre"
                        android:textColor="@color/color_text_darkgrey"
                        android:id="@+id/txtNombre"
                        android:layout_column="0"
                        />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioNombre"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_apellido1"
                        android:textColor="@color/color_text_darkgrey"
                        android:id="@+id/txtApellido1"
                        android:layout_column="0" />

                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioApellido1"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_apellido2"
                        android:id="@+id/txtApellido2"
                        android:textColor="@color/color_text_darkgrey"
                        android:layout_column="0" />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioApellido2"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_dni"
                        android:id="@+id/txtDNI"
                        android:textColor="@color/color_text_darkgrey"
                        android:layout_column="0" />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioDNI"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_email"
                        android:id="@+id/txtEmail"
                        android:textColor="@color/color_text_darkgrey"
                        android:layout_column="0" />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioEmail"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="textEmailAddress"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_direccion"
                        android:id="@+id/txtDireccion"
                        android:textColor="@color/color_text_darkgrey"
                        android:layout_column="0" />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioDireccion"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_localidad"
                        android:id="@+id/txtLocalidad"
                        android:textColor="@color/color_text_darkgrey"
                        android:layout_column="0" />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioLocalidad"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        android:inputType="text"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_telefono"
                        android:id="@+id/txtTelefono"
                        android:textColor="@color/color_text_darkgrey"
                        android:layout_column="0" />
                    <EditText
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioTelefono"
                        android:layout_column="1"
                        android:inputType="text"
                        android:textColor="@color/color_text_darkgrey"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_entrenaEn"
                        android:id="@+id/txtEntrena"
                        android:layout_column="0"
                        android:textColor="@color/color_text_darkgrey"/>
                    <Spinner
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioEntrena"
                        android:layout_column="1"
                        style="@style/CustomSpinnerTheme"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_rol"
                        android:id="@+id/txtRol"
                        android:layout_column="0"
                        android:textColor="@color/color_text_darkgrey"/>
                    <Spinner
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioRol"
                        android:layout_column="1"
                        style="@style/CustomSpinnerTheme"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_profesor"
                        android:id="@+id/txtProfesor"
                        android:layout_column="0"
                        android:textColor="@color/color_text_darkgrey"/>
                    <TextView
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/registrar_usuarioProfesor"
                        android:layout_column="1"
                        android:textColor="@color/color_text_darkgrey"
                        />

                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>