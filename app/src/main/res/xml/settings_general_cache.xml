<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="CACHE PETICIONES" >
        <EditTextPreference
            android:key="preferences_limite_cache_peticiones"
            android:title="@string/pref_download_limite_cache_peticiones"
            android:defaultValue="@string/pref_default_download_limite_cache_peticiones"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
        <Preference
            android:key="preferences_limpiar_cache_peticiones"
            android:title="Limpiar Peticiones"
            ></Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="CACHE IMAGENES" >
        <EditTextPreference
            android:key="preferences_limite_cache_imagenes"
            android:title="@string/pref_download_limite_cache_imagenes"
            android:defaultValue="@string/pref_default_download_limite_cache_imagenes"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
        <Preference
            android:key="preferences_limpiar_cache_imagenes"
            android:title="Limpiar Imagenes"
            ></Preference>

    </PreferenceCategory>
    <PreferenceCategory android:title="CACHE VIDEOS" >
        <EditTextPreference
            android:key="preferences_limite_cache_videos"
            android:title="@string/pref_download_limite_cache_videos"
            android:defaultValue="@string/pref_default_download_limite_cache_videos"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
        <Preference
            android:key="preferences_limpiar_cache_videos"
            android:title="Limpiar Videos"
            ></Preference>
    </PreferenceCategory>
</PreferenceScreen>